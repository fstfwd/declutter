{
  "name": "Declutter",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Remove clutter from HTML.",
  "icons": {
    // "16": "images/icon-16.png",
    // "48": "images/icon-48.png",
    // "128": "images/icon-128.png"
  },
  "permissions": [
    "*://*/*",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "Declutter",
    "default_icon": {
      // "19": "images/menu-icon-19.png",
      // "38": "images/menu-icon-38.png"
    }
    // "default_popup": "popup.html"
  }
}
